<Window x:Class="AimRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aim Robot" Height="480" Width="640" SizeToContent="Height" WindowStyle="SingleBorderWindow" ResizeMode="CanResizeWithGrip" >
    <Viewbox >
        <Canvas Name="_canvas" Height="480" Width="640" >
            <Canvas Name="_videocanvas">
                <MediaElement Name="_video" Source="" />
            </Canvas>
            <Image Name="_image" />
            <Rectangle Name="_target" Canvas.Left="230" Canvas.Top="50" Width="180" Height="40" Fill="Orange" Opacity=".8" />
            <Line Name="_centervertical" X1="320" Y1="0" X2="320" Y2="480" Stroke="Red" StrokeThickness="8" />
            <Line Name="_centerhorizontal" X1="0" Y1="240" X2="640" Y2="240" Stroke="Red" StrokeThickness="2" />
            <Line Name="_centercamera" X1="320" Y1="0" X2="320" Y2="480" Stroke="Yellow" StrokeThickness="6" />
            <TextBlock Name="_direction" Width="80" Height="40" Opacity=".8" Canvas.Left="0" Canvas.Top="398" />
            <TextBlock Name="_connected" Width="60" Height="20" FontSize="10" TextAlignment="Center" Foreground="White" />
            <TextBlock Name="_report" Canvas.Left="0" Canvas.Top="450" Height="30" Opacity=".8"/>
        </Canvas>
    </Viewbox>
</Window>
